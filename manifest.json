{
  "manifest_version": 2,
  "name": "Orthodox Lent Diet",
  "version": "1.0",
  "description": "Displays what you can and cannot eat on each day of the Russian Orthodox Great Lent",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Orthodox Lent Diet"
  }
}
